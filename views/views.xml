<odoo>
  <data>
    <!-- explicit list view definition -->
    
    <record model="ir.ui.view" id="q_note.list">
      <field name="name">q_note list</field>
      <field name="model">q_note</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>
    
    <record id="q_note_form" model="ir.ui.view">
      <field name="name">q_note_form</field>
      <field name="model">q_note</field>
      <field name="arch" type="xml">
        <form string="Q Meldung">
          <header>
            <field name="state" widget="statusbar" statusbar_visible="draft,created,confirmed,done,cancelled"/>
          </header>
        </form>
    </record>


    <!-- actions opening views on models -->
    
    <record model="ir.actions.act_window" id="q_note.action_window">
      <field name="name">q_note window</field>
      <field name="res_model">q_note</field>
      <field name="view_mode">tree,form</field>
    </record>
    

    <!-- server action to the one above -->
    
    <record model="ir.actions.server" id="q_note.action_server">
      <field name="name">q_note server</field>
      <field name="model_id" ref="model_q_note"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    

    <!-- Top menu item -->
    
    <menuitem name="q_note" id="q_note.menu_root"/>
    
    <!-- menu categories -->
    
    <menuitem name="Menu 1" id="q_note.menu_1" parent="q_note.menu_root"/>
    <menuitem name="Menu 2" id="q_note.menu_2" parent="q_note.menu_root"/>
    
    <!-- actions -->
    
    <menuitem name="List" id="q_note.menu_1_list" parent="q_note.menu_1"
              action="q_note.action_window"/>
    <menuitem name="Server to list" id="q_note" parent="q_note.menu_2"
              action="q_note.action_server"/>
    
  </data>
</odoo>